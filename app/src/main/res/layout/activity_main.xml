<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_light"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        tools:context="com.example.android.basket.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#81D4FA"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_light"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/Team_A"
                    android:textAllCaps="true"
                    android:textColor="@color/textTeam_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/team_a_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textColor="@color/textview_color"
                    android:textSize="38sp" />

                <Button
                    android:id="@+id/team_a_one_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@color/background_color"
                    android:onClick="teamA1Point"
                    android:text="@string/TeamA_1Point"
                    android:textAllCaps="true"
                    android:textColor="@color/my_item_color"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/team_a_two_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/background_color"
                    android:onClick="teamA2Points"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/TeamA_2Points"
                    android:textAllCaps="true"
                    android:textColor="@color/my_item_color"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/team_a_three_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/background_color"
                    android:onClick="teamA3Points"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/TeamA_3Points"
                    android:textAllCaps="true"
                    android:textColor="@color/my_item_color"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/team_a_keep_fault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/background_color"
                    android:onClick="team_a_fault"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/TeamA_fault"
                    android:textAllCaps="true"
                    android:textColor="@color/my_item_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/team_a_score_fault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textColor="@color/textview_color"
                    android:textSize="38sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_light"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/Team_B"
                    android:textAllCaps="true"
                    android:textColor="@color/textTeam_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/team_b_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textColor="@color/textview_color"
                    android:textSize="38sp" />

                <Button
                    android:id="@+id/team_b_one_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@color/background_color"
                    android:onClick="teamB1Point"
                    android:text="@string/TeamB_1Point"
                    android:textAllCaps="true"
                    android:textColor="@color/my_item_color"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/team_b_two_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/background_color"
                    android:onClick="teamB2Points"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/TeamB_2Points"
                    android:textAllCaps="true"
                    android:textColor="@color/my_item_color"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/team_b_three_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/background_color"
                    android:onClick="teamB3Points"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/TeamB_3Points"
                    android:textAllCaps="true"
                    android:textColor="@color/my_item_color"
                    android:textSize="14sp" />


                <Button
                    android:id="@+id/team_b_keep_fault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/background_color"
                    android:onClick="team_b_fault"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/TeamB_fault"
                    android:textAllCaps="true"
                    android:textColor="@color/my_item_color"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/team_b_score_fault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textColor="@color/textview_color"
                    android:textSize="38sp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="16dp"
                android:background="#ffd3d3d3"
                android:onClick="reset_points"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/reset_point"
                android:textSize="14sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#ffd3d3d3"
                android:onClick="reset_faults"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/reset_fault"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
